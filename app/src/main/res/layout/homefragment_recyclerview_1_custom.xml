<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="@dimen/padmar_70"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/padmar_5"
    android:layout_marginVertical="@dimen/padmar_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgIconMarket"
        android:layout_width="@dimen/padmar_50"
        android:layout_height="@dimen/padmar_50"
        android:layout_gravity="center"
        android:background="@drawable/home_recyclerview1_custom"
        android:padding="@dimen/padmar_10"
        android:src="@drawable/ic_sale" />

    <TextView
        android:id="@+id/tvIconMarket"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padmar_40"
        android:layout_marginTop="@dimen/padmar_5"
        android:text="@string/recyclerviewc_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14" />

</LinearLayout>