<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="@dimen/layout_100"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/padmar_15"
    android:layout_marginVertical="@dimen/padmar_10"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="@dimen/image_size_80"
        android:layout_height="@dimen/image_size_80"
        android:background="@drawable/home_recyclerview1_custom"
        android:padding="@dimen/padmar_10"
        android:src="@drawable/ic_automotive" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="@dimen/layout_100"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padmar_5"
        android:text="@string/text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16" />

</LinearLayout>