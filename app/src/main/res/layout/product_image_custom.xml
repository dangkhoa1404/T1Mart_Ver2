<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/padmar_5"
    android:layout_marginVertical="@dimen/padmar_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/padmar_100"
        android:layout_height="@dimen/padmar_65"
        android:layout_gravity="center"
        android:background="@drawable/product_image_custom"
        android:padding="@dimen/padmar_5"
        android:scaleType="centerInside"
        android:src="@drawable/ic_sale" />

</LinearLayout>